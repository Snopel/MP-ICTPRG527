<Window x:Class="FtoC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FtoC"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtTempF" HorizontalAlignment="Left" Height="23" Margin="345,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtTempC" HorizontalAlignment="Left" Height="23" Margin="345,277,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnConvert" Content="Convert" HorizontalAlignment="Left" Margin="368,213,0,0" VerticalAlignment="Top" Width="75" Click="btnConvert_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="368,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="Fahrenheit"/><Run Text=" (F)"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="368,305,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="Celsius (C)" Width="72" TextAlignment="Center"/>

    </Grid>
</Window>
