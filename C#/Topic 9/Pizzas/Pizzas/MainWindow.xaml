<Window x:Class="Pizzas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pizzas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="displayTxt" HorizontalAlignment="Left" Height="110" Margin="276,228,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="228"/>
        <TextBox x:Name="toppingsTxt" HorizontalAlignment="Left" Height="23" Margin="372,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="toppingsTxt_TextChanged"/>
        <TextBox x:Name="sizeTxt" HorizontalAlignment="Left" Height="23" Margin="372,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="sizeTxt_TextChanged"/>
        <Label Content="Toppings" HorizontalAlignment="Left" Margin="305,85,0,0" VerticalAlignment="Top"/>
        <Label Content="Size" HorizontalAlignment="Left" Margin="305,129,0,0" VerticalAlignment="Top"/>
        <Button x:Name="purchaseBtn" Content="Purchase" HorizontalAlignment="Left" Margin="352,187,0,0" VerticalAlignment="Top" Width="75" Click="purchaseBtn_Click"/>

    </Grid>
</Window>
