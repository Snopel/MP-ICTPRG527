<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:id="@+id/relativeLayout1">
    <RadioGroup
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/radioGroup1">
        <TextView
            android:text="Poomsae Practice Randomizer"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Colour Belt Forms"
            android:id="@+id/radColour" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Black Belt Forms  "
            android:id="@+id/radBlack" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Forms               "
            android:layout_marginBottom="15"
            android:id="@+id/radAll" />
        <TextView
            android:text="Form"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />
        <TextView
            android:text=""
            android:gravity="center"
            android:textSize="20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtForm"/>
        <TextView
            android:text="Focus"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />
        <TextView
            android:text=""
            android:gravity="center"
            android:textSize="20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtFocus"/>
        <Button
            android:text="Randomize"
            android:textSize="25"
            android:layout_marginTop="30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnRandomize" />
    </RadioGroup>
</RelativeLayout>